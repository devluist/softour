                                <figure class="front">
                                    <img src="/images/experiencias/noche_sub.jpg">
                                    <div class="caption">
                                        <h2><span>{{traduccion.EXPERIENCIAS_NOCHE}}</span></h2>
                                        <p>{{traduccion.VER_NOCHES}} </p>
                                        <a href="/busqueda/experiencia/noche"></a>
